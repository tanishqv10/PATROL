<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/lblGeneralSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="General Settings"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swtHealthCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Daily Health Check"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/lblRefreshRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textSize="20dp"
            android:text="Map Refresh Internal (min)"
            />

        <EditText
            android:id="@+id/txtRefreshRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/lblPrivacySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Privacy Settings"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swtShareStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Share COVID Status"
            android:textSize="20dp"
            />

        <Switch
            android:id="@+id/swtPasswordLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginBottom="5dp"
            android:text="Allow password change"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/logoutButton"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="@string/logout"
            />

        <TextView
            android:id="@+id/linkReportBugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact support@co-defender-app.com for questions or support inquiries."
            android:autoLink="web|email"
            android:layout_marginTop="180dp"
            android:textAlignment="center"
            android:textSize="17dp"
            />

    </LinearLayout>


</RelativeLayout>